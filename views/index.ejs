<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="chrome=1,ie=edge">
    <title>
        相册
    </title>
    <link rel="stylesheet" href="http://localhost:3000/static/css/master.css" />
</head>

<body>
    <div class="wrapper">
        <div class="title">相册列表：<a href="upload" class="title-btn">我要上传</a>
            <span class="title-status"><a href="http://localhost:3000/index">首页</a>&gt;
                <!-- <a href="javascript:;">flower</a> -->
            </span>
        </div>
        <div class="photo">
            <ul>
                <% if(Files.length>0){ %>
                    <% Files.forEach(function(item){ %>
                        <li>
                            <a href="javascript:;"><img src=<%= item %> /></a>
                        </li>
                    <% }) %>
                <% } %>
                <% if(Dirs.length>0){ %>
                    <% Dirs.forEach(function(item){ %>
                        <li class="folder" onclick="window.location.href='<%= item.url %>';"><%= item.name %> </li>
                    <% }) %>
                <% } %>
            </ul>
            <div class="cl"></div>
        </div>
    </div>
</body>

</html>